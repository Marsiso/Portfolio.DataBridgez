{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Sinks": {
      "Console": {
        "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
      },
      "File": {
        "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
        "Path": "Logs\\data-bridgez-identity-provider.log"
      },
      "Seq": {
        "ServerUrl": "http://localhost:8001"
      }
    }
  }
}
